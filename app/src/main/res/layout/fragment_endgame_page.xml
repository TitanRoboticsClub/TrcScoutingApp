<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="400dp"
            android:layout_height="64dp"
            android:text="This robot and another shared a chain"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/harmonizedCB" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="400dp"
            android:layout_height="64dp"
            android:text="This robot's human player scored a high note"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/highNoteCB" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="400dp"
            android:layout_height="64dp"
            android:text="At least 18 (15 if coopertition bonus) Amp and Speaker notes"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/melodyCB" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="400dp"
            android:layout_height="64dp"
            android:text="At least 10 Stage points and at least two OnStage robots"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ensembleCB" />

        <Spinner
            android:id="@+id/finalStateSpinner"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:entries="@array/robotStates"
            android:scaleX="1"
            android:theme="@style/customSpinnerItemStyle"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText2"
            app:layout_constraintTop_toBottomOf="@+id/robotBrokeDownCB" />

        <TextView
            android:id="@+id/lowerCellsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Final State"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="@+id/finalStateSpinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.19"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finalStateSpinner" />

        <CheckBox
            android:id="@+id/harmonizedCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp"
            android:text="  Harmonized"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/trapPointCB" />

        <CheckBox
            android:id="@+id/highNoteCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="  High Note"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/harmonizedCB" />

        <CheckBox
            android:id="@+id/melodyCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="  Melody"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/highNoteCB" />

        <CheckBox
            android:id="@+id/ensembleCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="  Ensemble"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/melodyCB" />

        <Button
            android:id="@+id/finishedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:onClick="confirmTypes"
            android:text="Finished"
            android:textSize="100sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notesET" />

        <Spinner
            android:id="@+id/finalLWTSpinner"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:entries="@array/outcomes"
            android:theme="@style/customSpinnerItemStyle"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText10"
            app:layout_constraintTop_toBottomOf="@+id/yellowCard2CB" />

        <EditText
            android:id="@+id/finalAllianceScoreInt"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            android:textSize="40sp"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText11"
            app:layout_constraintTop_toBottomOf="@+id/finalLWTSpinner" />

        <CheckBox
            android:id="@+id/yellowCard2CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="  Yellow Card"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ensembleCB" />

        <CheckBox
            android:id="@+id/yellowCard1CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text=" "
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/yellowCard2CB" />

        <EditText
            android:id="@+id/notesET"
            android:layout_width="692dp"
            android:layout_height="118dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Notes (optional)..."
            android:inputType="textMultiLine"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalAllianceScoreInt" />

        <TextView
            android:id="@+id/lowerCellsText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Outcome"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finalLWTSpinner" />

        <TextView
            android:id="@+id/lowerCellsText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Score"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.31"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finalAllianceScoreInt" />

        <CheckBox
            android:id="@+id/trapPointCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:minHeight="48dp"
            android:text="  Trap Point"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalStateSpinner" />

        <TextView
            android:id="@+id/endgameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Endgame Period"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/robotBrokeDownCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:text="  Broke Down"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgameText" />

        <CheckBox
            android:id="@+id/blockedHangCB"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Blocked Hang"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/robotBrokeDownCB" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="400dp"
            android:layout_height="64dp"
            android:text="This robot scored the trap point"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/harmonizedCB"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/trapPointCB" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>