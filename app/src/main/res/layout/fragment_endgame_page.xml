<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/endgameRobotStateSpinner"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:entries="@array/robotStates"
            android:scaleX="1"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText2"
            app:layout_constraintTop_toBottomOf="@+id/robotBrokeDownCB" />

        <TextView
            android:id="@+id/lowerCellsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="Final State"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/endgameRobotStateSpinner" />

        <CheckBox
            android:id="@+id/endgameCoopertitionBonusCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp"
            android:text="  Coopertition Bonus (3+ pieces per Co-op Grid)"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgameSustainabilityBonusCB" />

        <CheckBox
            android:id="@+id/endgameActivationBonusCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="  Activation Bonus (26+ Charge Station points)"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/endgameCoopertitionBonusCB" />

        <Button
            android:id="@+id/finishedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:onClick="confirmTypes"
            android:text="Finished"
            android:textSize="100sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/notesET" />

        <Spinner
            android:id="@+id/finalLWTSpinner"
            android:layout_width="400dp"
            android:layout_height="70dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:entries="@array/outcomes"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText10"
            app:layout_constraintTop_toBottomOf="@+id/yellowCard2CB" />

        <EditText
            android:id="@+id/finalAllianceScoreInt"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="number"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText11"
            app:layout_constraintTop_toBottomOf="@+id/finalLWTSpinner" />

        <CheckBox
            android:id="@+id/yellowCard2CB"
            android:layout_width="310dp"
            android:layout_height="0dp"
            android:layout_marginTop="24dp"
            android:minHeight="48dp"
            android:text="  Yellow Card"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgameActivationBonusCB" />

        <CheckBox
            android:id="@+id/yellowCard1CB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text=" "
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.242"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/yellowCard2CB" />

        <EditText
            android:id="@+id/notesET"
            android:layout_width="700dp"
            android:layout_height="100dp"
            android:layout_marginTop="24dp"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Notes (optional)..."
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalAllianceScoreInt" />

        <TextView
            android:id="@+id/lowerCellsText10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Outcome"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finalLWTSpinner" />

        <TextView
            android:id="@+id/lowerCellsText11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Score"
            android:textColor="@android:color/black"
            android:textSize="50sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.171"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/finalAllianceScoreInt" />

        <CheckBox
            android:id="@+id/endgameSustainabilityBonusCB"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:minHeight="48dp"
            android:text="  Sustainability Bonus (5+ links, or 4+ if have Co-op bonus)"
            android:textColor="@android:color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgameRobotStateSpinner" />

        <TextView
            android:id="@+id/endgameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Endgame Period"
            android:textSize="70sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/robotBrokeDownCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="  Broke Down"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.431"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/endgameText" />

        <CheckBox
            android:id="@+id/blockedHangCB"
            android:layout_width="200dp"
            android:layout_height="38dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="Blocked Hang"
            android:textSize="24sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.52"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/robotBrokeDownCB" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>