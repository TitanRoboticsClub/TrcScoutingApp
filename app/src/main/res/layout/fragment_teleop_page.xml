<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="173dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="-21dp">

        <CheckBox
            android:id="@+id/teleopScoredCubesCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:text="Scored Cubes"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.835"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopPowerPortsText" />

        <CheckBox
            android:id="@+id/teleopScoredConesCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="48dp"
            android:text="Scored Cones"
            android:textSize="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.154"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopPowerPortsText" />

        <TextView
            android:id="@+id/innerCellsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="Links"
            android:textColor="@color/colorPrimary"
            android:textSize="36dp"
            app:layout_constraintStart_toEndOf="@+id/innerCellsText"
            app:layout_constraintTop_toBottomOf="@+id/teleopScoredConesCB" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/teleopGoalsHighPicker"
            android:layout_width="100dp"
            android:layout_height="300dp"

            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toEndOf="@+id/teleopGoalsMedPicker"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <TextView
            android:id="@+id/teleopPowerPortsText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Play Style"
            android:textColor="@color/colorPrimary"
            android:textSize="48dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopGoalsLowPicker" />

        <TextView
            android:id="@+id/lowerCellsText7"
            android:layout_width="114dp"
            android:layout_height="64dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Fouls"
            android:textColor="@color/colorPrimary"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopPlaystyleSpinner" />

        <TextView
            android:id="@+id/lowerCellsText8"
            android:layout_width="232dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Tech Fouls"
            android:textColor="@color/colorPrimary"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.72"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/lowerCellsText7" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/teleopLinksPicker"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toEndOf="@+id/teleopGoalsHighPicker"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/teleopGoalsMedPicker"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toEndOf="@+id/teleopGoalsLowPicker"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/teleopGoalsLowPicker"
            android:layout_width="100dp"
            android:layout_height="300dp"

            android:layout_marginTop="20dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/foulsCounter"
            android:layout_width="100dp"
            android:layout_height="300dp"

            android:layout_marginTop="8dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.315"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText7"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/techFoulsCounter"
            android:layout_width="100dp"
            android:layout_height="300dp"
            android:layout_marginTop="8dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.676"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText8"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <TextView
            android:id="@+id/teleOpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Teleoperated Period"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lowerCellsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:textColor="@color/colorPrimary"
            android:textSize="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.104"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopScoredConesCB" />

        <TextView
            android:id="@+id/innerCellsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="High"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/outerCellsText"
            app:layout_constraintTop_toBottomOf="@+id/teleopScoredConesCB" />

        <TextView
            android:id="@+id/teleopPowerPortsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Goals"
            android:textColor="@color/colorPrimary"
            android:textSize="48dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleOpText" />


        <TextView
            android:id="@+id/outerCellsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="72dp"
            android:text="Middle"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintStart_toEndOf="@+id/lowerCellsText"
            app:layout_constraintTop_toBottomOf="@+id/teleopScoredConesCB" />

        <Spinner
            android:id="@+id/teleopPlaystyleSpinner"
            android:layout_width="315dp"
            android:layout_height="76dp"
            android:layout_marginTop="12dp"
            android:entries="@array/play_styles"
            android:theme="@style/customSpinnerItemStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teleopPowerPortsText2" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/terminalMissedCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/terminalLowGoalCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/terminalHighGoalCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/launchpadMissedCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/launchpadLowGoalCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />


        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/launchpadHighGoalCounter"
            android:layout_width="40dp"
            android:layout_height="129dp"
            android:visibility="gone"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lowerCellsText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>