<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="600dp"
        android:verticalScrollbarPosition="defaultPosition"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-11dp">

        <EditText
            android:id="@+id/matchNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Match #"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            android:textColorHint="#546E7A"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/teamNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Team #"
            android:importantForAutofill="no"
            android:inputType="numberSigned"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matchNum" />

        <Spinner
            android:id="@+id/matchTypeSpinner"
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:entries="@array/game_types"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamNum" />


        <Spinner
            android:id="@+id/spectatingTeamSpinner"
            android:layout_width="315dp"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:entries="@array/spectating_types"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/matchTypeSpinner" />

        <TextView
            android:id="@+id/matchTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginBottom="8dp"
            android:text="Match Type"
            android:textColor="#000000"
            android:textSize="20sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/matchTypeSpinner"
            app:layout_constraintStart_toStartOf="@+id/matchTypeSpinner" />

        <TextView
            android:id="@+id/spectatingTeamText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="4dp"
            android:text="Spectating Team"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/spectatingTeamSpinner"
            app:layout_constraintStart_toStartOf="@+id/spectatingTeamSpinner" />

        <TextView
            android:id="@+id/autonomousText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="Autonomous Period"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spectatingTeamSpinner" />

        <CheckBox
            android:id="@+id/leftCommunityCB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:minHeight="48dp"
            android:text="Left Community"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autonomousText" />

        <TextView
            android:id="@+id/preScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="324dp"
            android:layout_marginTop="16dp"
            android:text="Preloaded Score"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/leftCommunityCB" />

        <Spinner
            android:id="@+id/preloadedSpinner"
            android:layout_width="164dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:entries="@array/preloadedScoring"
            app:layout_constraintStart_toStartOf="@+id/preScoreText"
            app:layout_constraintTop_toBottomOf="@+id/preScoreText" />

        <TextView
            android:id="@+id/autoScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="24dp"
            android:text="Auto Elements Scored"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/spectatingTeamSpinner"
            app:layout_constraintTop_toBottomOf="@+id/preloadedSpinner" />

        <TextView
            android:id="@+id/autoScoreLowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Low"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@+id/autoScoredLowSpinner"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreText" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/autoScoredLowSpinner"
            android:layout_width="80dp"
            android:layout_height="240dp"
            android:layout_marginTop="16dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toStartOf="@+id/autoScoredMedSpinner"
            app:layout_constraintHorizontal_bias="0.66"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreLowText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0">

        </com.travijuu.numberpicker.library.NumberPicker>

        <TextView
            android:id="@+id/autoScoreMediumText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="20dp"
            android:text="Medium"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/autoScoreLowText"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreText" />

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/autoScoredMedSpinner"
            android:layout_width="80dp"
            android:layout_height="240dp"
            android:layout_marginTop="16dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreMediumText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0">

        </com.travijuu.numberpicker.library.NumberPicker>

        <com.travijuu.numberpicker.library.NumberPicker
            android:id="@+id/autoScoredHighSpinner"
            android:layout_width="80dp"
            android:layout_height="240dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="16dp"
            app:custom_layout="@layout/custom_number_picker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.284"
            app:layout_constraintStart_toEndOf="@+id/autoScoredMedSpinner"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreHighText"
            app:max="50"
            app:min="0"
            app:unit="1"
            app:value="0" />

        <TextView
            android:id="@+id/autoScoreHighText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="128dp"
            android:layout_marginTop="20dp"
            android:text="High"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/autoScoreMediumText"
            app:layout_constraintTop_toBottomOf="@+id/autoScoreText" />

        <TextView
            android:id="@+id/engagementStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Charge Station Engagement"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/autoScoredMedSpinner" />

        <Spinner
            android:id="@+id/autoEngagedDockedStateSpinner"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:entries="@array/autoEngagedDockedState"
            android:minHeight="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/engagementStatusTextView" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>